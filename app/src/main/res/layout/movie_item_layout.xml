<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   app:layout_constraintStart_toStartOf="parent"
                                                   app:layout_constraintBottom_toBottomOf="parent"
                                                   android:id="@+id/movie_container">

    <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp" app:srcCompat="@android:color/darker_gray"
            android:id="@+id/movie_thumbnail"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="1dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="4dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movie_title" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/movie_thumbnail"
            android:layout_marginStart="8dp" android:textStyle="bold" android:textSize="14sp"
            android:textColor="#000000" android:maxLines="1" android:minLines="1" android:layout_marginTop="4dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/movie_description" app:layout_constraintStart_toEndOf="@+id/movie_thumbnail"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/movie_title"
            app:layout_constraintBottom_toBottomOf="@+id/movie_thumbnail" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textColor="#000000" android:textSize="12sp" android:maxLines="4"
            android:minLines="4" android:layout_marginTop="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
